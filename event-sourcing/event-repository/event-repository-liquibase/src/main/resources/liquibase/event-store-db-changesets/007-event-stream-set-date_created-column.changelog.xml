<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="event-store-007" author="TechPod"
               logicalFilePath="007-event-stream-set-date_created-column.changelog.xml">

        <sql>
            UPDATE event_stream
            SET date_created = streams.date_created
                FROM
                    (SELECT
                        stream_id AS stream_id,
                        MIN(date_created) AS date_created
                        FROM event_log
                        GROUP BY stream_id) AS streams
                WHERE
                event_stream.stream_id = streams.stream_id
        </sql>

    </changeSet>
</databaseChangeLog>